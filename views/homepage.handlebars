{{#if posts.length}}
    <ul>
        {{#each posts}}
            <li>
                <h2>{{this.title}}</h2>
                <p>{{this.content}}</p>
                <p>Posted by {{this.username}} on {{this.createdAt}}</p>
            </li>
        {{/each}}
    </ul>
{{else}}
    <p>No blog posts yet!</p>
{{/if}}