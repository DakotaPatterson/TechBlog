<h1>Dashboard</h1>

<h2>Welcome, {{user.username}}</h2>

<h3>Your Posts</h3>
{{#if posts.length}}
    <ul>
        {{#each posts}}
            <li>
                <h4>{{this.title}}</h4>
                <p>{{this.content}}</p>
                <p>Posted on {{this.createdAt}}</p>
                <form action="/posts/delete/{{this.id}}" method="POST">
                    <button type="submit">Delete</button>
                </form>
                <form action="/posts/edit/{{this.id}}" method="POST">
                    <input type="text" name="title" value="{{this.title}}" required>
                    <textarea name="content" required>{{this.content}}</textarea>
                    <button type="submit">Update</button>
                </form>
            </li>
        {{/each}}
    </ul>
{{else}}
    <p>No posts yet!</p>
{{/if}}

<h3>Add a New Post</h3>
<form action="/posts" method="POST">
    <input type="text" name="title" placeholder="Title" required>
    <textarea name="content" placeholder="Content" required></textarea>
    <button type="submit">Add Post</button>
</form>